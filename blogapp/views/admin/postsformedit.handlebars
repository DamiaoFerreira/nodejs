{{#each erros}}
<div class="alert alert-danger">{{texto}}</div>
{{else}}
{{/each}}
<div class="card">
  <div class="card-body">
      <h4>Editar postagem</h4>
      <form action="/admin/posts/edit" method="post">
      <input type="hidden" value="{{postagem._id}}" name="id"/>
        <label for="title">Título</label>
        <input type="text" name="title" id="title" class="form-control" value="{{postagem.titulo}}"/>
        <lable for="slug">Slug</label>
        <input type="text" name="slug" class="form-control" value="{{postagem.slug}}"/>
        <label for="describe">Descrição</label>
        <input type="text" name="describe" class="form-control" value="{{postagem.descricao}}"/>
        <label for="content">Conteúdo</label>
        <textarea name="content" class="form-control">{{postagem.conteudo}}</textarea>
        <lable for="category">Categoria</lable>
        <select name="category" class="custom-select" >
          {{#each categorias}}
            <option value="{{_id}}">{{nome}}</option>
          {{else}}
            <option value="0">Nenhuma categoria registrada</option>
          {{/each}}
        </select>
        <button type="submit" name="content" class="btn btn-success mt-2">SALVAR</button>
      </form>
  </div>
</did>
