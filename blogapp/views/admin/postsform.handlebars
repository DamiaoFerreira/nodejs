<div class="card">
  <div class="card-body">
      <h4>Nova postagem</h4>
      <form action="" method="post">
        <label for="title">Título</label>
        <input type="text" name="title" class="form-control"/>
        <lable for="slug">Slug</label>
        <input type="text" name="slug" class="form-control"/>
        <label for="describe">Descrição</label>
        <input type="text" name="describe" class="form-control"/>
        <label for="content">Conteúdo</label>
        <textarea name="content" class="form-control"></textarea>
        <lable for="category">Categoria</lable>
        <select name="category" class="custom-select">
          {{#each categorias}}
            <option value="{{_id}}">{{nome}}</option>
          {{else}}
            <option value="0">Nenhuma categoria registrada</option>
          {{/each}}
        </select>
        <button type="submit" name="content" class="btn btn-success mt-2">SALVAR</button>
      </form>
  </div>
</did>
